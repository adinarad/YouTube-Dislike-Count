{
    "name": "YouTube Dislike Count",
    "description": "Adds the dislike count back for you!",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "webNavigation"
    ],
    "action": {
        "default_title": "Show Dislikes"
    },
    "host_permissions": [
        "https://*.youtube.com/*"
    ]
}